{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "module": "esnext",
    "outDir": "./dist/",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    /*"target": "es2015",*/
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom",
      "es2017.object"
    ]
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "enableIvy":false
  },    
  "paths": {
    "@smart-elements": ["node_modules/@smart-webcomponents-angular/scheduler/source/smart.scheduler.js"],
    "@smart-elements-css": ["node_modules/@smart-webcomponents-angular/scheduler/source/styles/smart.scheduler.css"]    
  }  
}